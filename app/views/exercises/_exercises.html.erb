<%= time_tracker(@exercises) %>
<p id="notice"><%= notice %></p>

<div class="item-box">
  <% @exercises.order(:created_at).reverse_each do |exercise| %>
  <div class="item">
    <%= exercise_icon(exercise) %>
    <p class='item-name'> <%= exercise.Name %> </p>
    <p class="tracker">
      <strong><%= exercise.Amount.nil? ? '' : "#{exercise.Amount} reps" %></strong>
      <strong><%= exercise.distance.nil? ? '' : "#{exercise.distance} km" %></strong>
      <strong><%= exercise.time.nil? ? '' : to_time(exercise.time) %></strong>
    </p>
    <p> <%= time_ago_in_words exercise.created_at %> ago </p>
  </div>
  <% end %>
</div>