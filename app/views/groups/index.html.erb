<h1 class="nav-title">Groups</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Icon</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.reverse_each do |group| %>
      <tr>
        <td><%= group.Name %></td>
        <td><%= group.Icon %></td>
        <td><%= group.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to raw('<span>New Group</span>'), new_group_path, class: 'action-btn' %>
